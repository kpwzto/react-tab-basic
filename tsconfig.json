{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "declarationDir": "./dist/types",
    "declaration": true,
    "declarationMap": true,
    "mapRoot": "./",
    "lib": [
      "dom",
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "jsx": "react",
  },
  "include": [
    "src/app/**/*.ts",
    "src/app/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
